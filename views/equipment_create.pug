extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Equipment Name:
      input#equipment_name.form-control(type='text' placeholder='Boxing shoes 101' name='name' required='true' )
    div.form-group
      label(for='description') Discription:
      input#description.form-control(type='text' placeholder='Best shoes for boxing' name='description' required='true' )
    div.form-group
      label(for='category') Category:
      select#category.form-control(type='select', placeholder='Select category' name='category' required='true' )
        each category in category_list
          option(value=category._id) #{category.name}
        else 
          p Create a category first!
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number' min='0' max='9999' placeholder='33' name='price' required='true' )
    div.form-group
      label(for='stock') Stock:
      input#stock.form-control(type='number' min='0' max='999' placeholder='5' name='stock' required='true' )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
  