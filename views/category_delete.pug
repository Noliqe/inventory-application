extends layout

block content
  h1 #{title}: #{category.name}

  if equipment.length

    p #[strong Delete the following equipment before attempting to delete this category.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Equipment

      dl
      each equip in equipment
        dt
          a(href=equip.url) #{equip.name}
        dd #{equip.discription}

  else
    p Do you really want to delete this Category?

    form(method='POST' action='')
      div.form-group
        input#categoryrid.form-control(type='hidden',name='categoryid', required='true', value=category._id )

      button.btn.btn-primary(type='submit') Delete
