extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Category Name:
      input#category_name.form-control(type='text' value=category.name name='name' required='true' )
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text' value=category.description name='description' required='true' )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg

  