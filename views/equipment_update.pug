extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Equipment Name:
      input#equipment_name.form-control(type='text' value=equipment.name name='name' required='true' )
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text' value=equipment.description name='description' required='true' )
    div.form-group
      label(for='category') Category:
      select#category.form-control(type='select', name='category' required='true' )
        each category in categories
          option(value=category._id) #{category.name}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number' min='0' max='9999' value=equipment.price name='price' required='true' )
    div.form-group
      label(for='stock') Stock:
      input#stock.form-control(type='number' min='0' max='999' value=equipment.stock name='stock' required='true' )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
  